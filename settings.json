{
    "editor.showFoldingControls": "always",
    
    // 禁用 Java 相关扩展
    "java.enabled": false,
    "java.configuration.checkProjectSettingsExclusions": false,
    "java.import.enabled": false,
    "java.import.gradle.enabled": false,
    "java.import.maven.enabled": false,
    "redhat.java.enabled": false,
    
    // 禁用 C# 相关扩展（OmniSharp 等）
    "omnisharp.enableRoslynAnalyzers": false,
    "omnisharp.enableImportCompletion": false,
    "csharp.suppressDotnetInstallWarning": true,
    "csharp.suppressDotnetRestoreNotification": true,
    
    // 禁用 C++ 相关扩展
    "C_Cpp.autocomplete": "disabled",
    "C_Cpp.errorSquiggles": "disabled",
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.dimInactiveRegions": false,
    "C_Cpp.codeFolding": "textEditor",
    "C_Cpp.default.browse.databaseFilename": "",
    
    // 通用扩展禁用
    "extensions.ignoreRecommendations": true,
    "extensions.autoUpdate": false,
    
    // 语言特定禁用
    "[java]": {
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": false
        }
    },
    "[csharp]": {
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": false
        }
    },
    "[cpp]": {
        "editor.formatOnSave": false,
        "editor.suggest.showSnippets": false
    },
    
    // 推荐的替代设置，防止自动激活这些语言的扩展
    "files.associations": {
        "*.java": "plaintext",
        "*.cs": "plaintext",
        "*.cpp": "plaintext",
        "*.h": "plaintext",
        "*.hpp": "plaintext"
    },
    
    // 禁用语言服务器
    "csharp.tools.dotnetPath": null,
    "java.home": null,
    "java.jdt.ls.java.home": null,
    
    // 工作区扩展推荐（可选：明确列出不想要的扩展）
    "extensions.unwantedRecommendations": [
        "vscjava.vscode-java-pack",
        "ms-dotnettools.csharp",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "redhat.java",
        "vscjava.vscode-java-debug",
        "vscjava.vscode-java-test",
        "vscjava.vscode-maven",
        "vscjava.vscode-java-dependency",
        "ms-dotnettools.vscode-dotnet-pack",
        "ms-vscode.cpptools-themes"
    ]
}